# Production environment variables for Railway
# Copy these to Railway dashboard -> Variables

# MongoDB (use MongoDB Atlas connection string)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pehchan?retryWrites=true&w=majority

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (set after deploying frontend)
FRONTEND_URL=https://your-frontend.railway.app

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Port (Railway sets this automatically)
PORT=5001

# Node Environment
NODE_ENV=production
